extends layout

block content
    form(method="POST" action="/"+course._id+"/update").col-md-4.mx-auto
        .form-group
            label(for="crName") Course Name
            input(id="crName" name="crName" placeholder="Enter Course Name" class="form-control" value=course.crName required="require")
            label(for="crDuration") Course Duration
            input(id="crDuration" name="crDuration" placeholder="Enter Course Duration" class="form-control" value=course.crDuration required="require")
            label(for="crFee") Course Fee
            input(id="crFee" type="number" name="crFee" placeholder="Enter Course Fee" class="form-control" value=course.crFee required="require")
            input(id="submit" type="submit" name="submit" value="Submit" class="btn btn-success my-3")